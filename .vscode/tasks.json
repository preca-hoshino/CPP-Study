{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "[Windows] cl.exe 生成活动文件",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                // "/O2",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。",
            "presentation": {
                "reveal": "always",
                // "close": true
            }
        },
        // {
        //     "label": "[Windows] 删除 cl.exe 生成的文件",
        //     "type": "shell",
        //     "command": "pwsh",
        //     "args": [
        //         "-Command",
        //         "'Get-ChildItem -Path . -Include *.exe,*.ilk,*.obj,*.pdb -Recurse -File | Remove-Item -Force'"
        //     ]
        // },
        {
            "type": "cppbuild",
            "label": "[Linux] g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                // "&",
                // "bash",
                // "-c",
                // "'read -n 1 -s -r key -p 'Press any key to continue…''"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/g++",
            "presentation": {
                "reveal": "always",
                // "close": true
            }
        },
